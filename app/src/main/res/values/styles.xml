<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/DefaultButton</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="editTextBackground">@drawable/bg_edittext</item>
        <item name="android:textViewStyle">@style/TextBase</item>
    </style>

    <style name="FormField" parent="Widget.AppCompat.EditText">
        <item name="android:paddingLeft">@dimen/form_control_padding</item>
        <item name="android:paddingRight">@dimen/form_control_padding</item>
        <item name="android:layout_height">@dimen/form_control_height</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PrimaryButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_primary_ripple</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="SecondaryButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_secondary_ripple</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <style name="DefaultButton" parent="BaseButton">
        <item name="android:background">@drawable/bg_default_ripple</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/arial_bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:fontFamily">@font/arial_bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextBase" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/arial_regular</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="FormError" parent="TextBase">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:layout_marginLeft">@dimen/form_control_padding</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>